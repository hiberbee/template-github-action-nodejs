{
  "name": "github-action-minikube",
  "version": "1.0.0",
  "private": true,
  "description": "Start a Kubernetes cluster with Minikube in github actions",
  "main": "build/main.js",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "clean": "rimraf build",
    "lint": "eslint --fix src/**/*.ts",
    "build": "ncc build build/main.js",
    "test": "jest",
    "start": "cross-env RUNNER_TEMP=build node dist/index.js",
    "all": "npm run lint && npm run compile && npm run test && npm run build && npm run clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiberbee/template-github-action-nodejs.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "github-action",
    "project-template"
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad@hiberbee.com",
    "url": "https://github.com/vladyslavvolkov"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/http-client": "^1.0.8",
    "@actions/tool-cache": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.7.0",
    "@zeit/ncc": "^0.22.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-github": "^4.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "jest": {
    "rootDir": "test",
    "transform": {
      "\\.ts$": [
        "ts-jest"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run all && git add ."
    }
  }
}
