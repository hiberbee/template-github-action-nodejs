{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "ES6"
    ],
    "module": "ES6",
    "moduleResolution": "Node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "target": "ES6",
    "removeComments": true
  },
  "include": [
    "src/*"
  ]
}
